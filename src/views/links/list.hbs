<div class="container p-4">
    <div class="row">
        {{#each linksyu}} {{!-- Para recorrer los datos de la BD linksyu se la asignamos al momento de realizar el select from de la BD al tratar de mostrar los resultados--}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <div class="card-title text-uppercase">
                                {{title}}
                            </div>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                        <a href="" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>No se encuentran datos para mostrar</p>
                        <a href="/links/add">Insertar informacion</a>
                    </div>
                </div>
        {{/each}}
    </div>
</div>